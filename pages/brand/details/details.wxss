/* pages/brand/details/details.wxss */
.page-content {
  width: auto;
  min-height: 1000rpx; 
  height: auto;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background: #666;

  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}
.intro {
  width: 670rpx;
  height: 540rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  background: #FFFFFF;
  box-shadow: 0 4px 10px 0 rgba(173,186,222,0.20);

   margin-left: 20rpx; 
   margin-right: 20rpx; 
   margin-bottom: 28rpx;
   margin-top: 596rpx;

   display: flex;
   flex-direction: column;
  justify-content: start;
  align-items: center;

}
.intro .head-img {
  width: 482rpx;
  height: 104rpx;
  background: #000000;
  box-shadow: 0 4px 9px 0 rgba(19,27,53,0.30);

  margin-top: 88rpx;
  margin-left: 96rpx;
  margin-right: 96rpx;
}
.intro .sum {
  font-family: STSongti-SC-Bold;
  font-size: 36rpx;
  color: #737373;
  text-align: center;

  margin-top: 76rpx;
  margin-bottom: 60rpx;
} 
.intro .key-word {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  
  padding-left: 32rpx;
  padding-right: 32rpx;

}
.intro .key-word text {
  font-family: SFProText-Regular;
  font-size: 28rpx;
  color: #404040;
  margin: 20rpx;
}
.setup {
  width: 670rpx;
  min-height: 436rpx;
  height: auto;
  background: #FFFFFF;
  border-radius: 8rpx;
  background: #FFFFFF;
  box-shadow: 0 4px 10px 0 rgba(173,186,222,0.20);

   margin-left: 20rpx; 
   margin-right: 20rpx; 
   margin-bottom: 22rpx;
   margin-top: 4rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
}
.setup .border, .honor .border {
  width: 16px;
  height: 0;
  border: 1px solid #0d0d0d;

  margin-top: 64rpx;
  margin-bottom: 32rpx;
}
.setup .title, .honor .title {
font-family: SFProText-Medium;
font-size: 14px;
color: #404040;
letter-spacing: 1px;
text-align: center;

margin-bottom: 32rpx;
}
.setup .content {
width: 606rpx;
font-family: PingFangSC-Regular;
font-size: 14px;
color: #737373;
letter-spacing: 1px;
text-align: center;

margin-bottom: 64rpx;
}
.honor {
  width: 670rpx;
  min-height: 530rpx;
  height: auto;
  background: #FFFFFF;
  box-shadow: 0 4px 10px 0 rgba(173,186,222,0.20);
  border-radius: 8rpx;

  margin-left: 20rpx; 
  margin-right: 20rpx; 
  margin-bottom: 80rpx;
  margin-top: 10rpx;

  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.honor .show {
  display: flex;
  justify-content: space-between;
  flex-direction: row;

}
.honor .show .show-detail {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.honor .show .show-detail image {
  width: 140rpx;
  height: 140rpx;
  background: red;
  margin-left: 66rpx;
  margin-right: 66rpx; 
  margin-top: 34rpx;
  margin-bottom: 28rpx;
}
.honor .show .show-detail text {
font-family: PingFangSC-Regular;
font-size: 11px;
color: #A6A6A6;
text-align: center;
}