<!--pages/brand/brand.wxml-->
<view class='content-page'>
    <brand-top></brand-top>
    
      <view class="swiper-tab">
        <view class="bre swiper-tab-list {{tab==0 ? 'on' : ''}}" data-current="0" bindtap="tab_click">品牌介绍</view>
        <view class="swiper-tab-list {{tab==1 ? 'on' : ''}}" data-current="1" bindtap="tab_click">服务内容</view>
      </view>
      <swiper current="{{tab}}" class="swiper-box" duration="300" bindchange="tab_slide">
        <swiper-item>
        <brand-detail></brand-detail>
        </swiper-item>
        <swiper-item>
          <view class="brand-container" wx:if="{{brand}}"> 
            <view class="brand-component">
              <activity-banner class="activity-banner"></activity-banner>
            </view>
            <view class="brand-component component-margin-top">
              <class-banner isList="false" class="class-banner"></class-banner>
            </view>
            <view class="brand-component component-margin-top">
              <location-banner class="location-banner"></location-banner>
            </view>
          </view>
        </swiper-item>
      </swiper>
    </view>
  
