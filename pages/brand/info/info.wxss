/* pages/brand/brand.wxss */
.content-page {
  height: 100%;
}
.swiper-tab{  
    width: 100%;  
    height: auto;
    border-bottom: 2rpx solid #eee;  
    text-align: left;  
    line-height: 80rpx;
    background: #fff;
    font-size: 28rpx;

    margin-left: 40rpx;
    margin-right: 40rpx;
}  
.on{ 
  border-bottom: 4rpx solid rgba(128,174,255,1);
}  
.swiper-tab-list{  
  display: inline-block;  
  width: 154rpx;  
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #80AEFF;
  letter-spacing: 2rpx;
  margin-right: 80rpx;
}
.swiper-box {
  width: 100%;
  height: 2400rpx;
}
.brand-apply-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
  width: 240rpx; 
  height: 72rpx;
  border-radius: 18px;
  color: #fff;
  font-size: 28rpx;
  background: linear-gradient(to right, rgba(161,226,255,1),rgba(107,160,255,1));
}
.brand-apply-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
