/* pages/preregister/preregister.wxss */
.content-page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  padding-top: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.logo {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.logo image {
  margin-bottom: 32rpx;
  width: 372rpx;
  height: 170rpx;
  background: #ddd;
}
/*模态框*/
.child-title {
  margin-bottom: 72rpx;
  display: flex;
  flex-direction: column;
}
.child-title .title-text {
  margin-bottom: 16rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #0D0D0D;
}
.child-title .subtitle-text {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #A6A6A6;
}
.base-info {
  display: flex;
  flex-direction: column;
}
.base-info .base-info-list {
  margin-bottom: 48rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  height: 44rpx;
  line-height: 44rpx;
}
.base-info-list .section {
  width: 80%;
  text-align: right;
}
.base-info .info-title {
  min-width: 80rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #0D0D0D;
}
.base-info .nickinput {
  text-align: right;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #404040;
}
.base-info .select {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #A6A6A6;
  text-align: right;
}
.base-info .select text {
  padding-bottom: 10rpx;
  line-height: 44rpx;
  color:#404040;
}
.base-info .select image {
  margin-top: 10rpx;
  margin-left: 40rpx;
  width: 12rpx;
  height: 24rpx;
}

.rela {
  padding-bottom: 26rpx;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #f2f2f2;
}
.rela .rela-title {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #0D0D0D;
}
.rela-radio-group {
  margin-top: 32rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #404040;
}
.rela-radio-group .rela-radio {
  margin-right: 64rpx;
}
.rela-radio-group .rela-radio-left {
  margin-left: 64rpx;
}
.rela-radio-group .redio-dot {
  margin-right: 16rpx;
  width: 44rpx;
  height: 44rpx;
}
.save-child {
  width: 100%;
  height: 96rpx;

  margin-top: 16rpx;
  margin-bottom: 40rpx;
  margin-right: 80rpx;

  background-image: linear-gradient(-90deg,#5F93ED 100%, #8CB6FF 0% );
  border-radius: 8rpx;
  box-shadow: 0 4px 8px 0 rgba(52,96,201,0.48);

  text-align: center;
  color: #fff;
  font-weight: 700;
}
button::after{ border: none; }
.alert {
  display: flex;
  flex-direction: column;
}
.alert .title{
  display: flex;
  justify-content: flex-end;
  align-items: center;

  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #80AEFF;
  margin-bottom: 62rpx;
  padding-right: 34rpx;
  background: #FAFAFA;
  height: 80rpx;
}
.alert .lists {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.lists .list {
  font-family: SFProText-Regular;
  font-size: 28rpx;
  color: #404040;
}