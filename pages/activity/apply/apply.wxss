.content-page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  padding-top: 76rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.list{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  margin-bottom: 64rpx;
}
.list .name {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #404040;
}
.list .select text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #D9D9D9;
  margin-right: 16rpx;
}
.list .select image {
  width: 8rpx;
  height: 16rpx;
  /* background: red; */
}
.list .select .child {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #80AEFF;
}
.list .select .add {
  width: 28rpx;
  height: 28rpx;
}
.list .select input {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #D9D9D9;
  text-align: right;
}
.border-bottom {
  border-bottom: 1px solid rgba(0,0,0,0.05);
  padding-bottom: 56rpx;
  margin-bottom: 56rpx;
}
.btn {
  position: fixed;
  background: #fff;
  width: 90%;
  height: 60rpx;
  bottom: 0;


  z-index: 2;

  margin-top: 16rpx;
  margin-bottom: 40rpx;
  margin-right: 80rpx;

  background-image: linear-gradient(-90deg,#5F93ED 100%, #8CB6FF 0% );
  border-radius: 8rpx;
  box-shadow: 0 4px 8px 0 rgba(52,96,201,0.48);

  text-align: center;
  padding-top: 32rpx;
  padding-bottom: 32rpx;
}
/*模态框*/
.modals{position:fixed; z-index: 999; top:0; left: 0; right:0; bottom: 0;}
.modals-cancel{position:absolute; z-index:1000; top:0; left: 0; right:0; bottom: 0; background-color: rgba(0,0,0,.5);}
.bottom-dialog-body{position:absolute; z-index:1000; bottom:0; left:0; right:0; padding:0; height:510rpx; background-color: #fff;}
/*动画前初始位置*/
.bottom-pos{-webkit-transform:translateY(100%);transform:translateY(100%);}

.alert {
  display: flex;
  flex-direction: column;
}
.alert .title{
  display: flex;
  justify-content: flex-end;
  align-items: center;

  font-family: PingFangSC-Medium;
  font-size: 17px;
  color: #80AEFF;
  margin-bottom: 62rpx;
  padding-right: 34rpx;
  background: #FAFAFA;
  height: 80rpx;
}
.alert .lists {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.lists .list {
  font-family: SFProText-Regular;
  font-size: 14px;
  color: #404040;
}