<view class="clsdet-container">

	<view class="clsdet-component">
		<clsimg exp="{{actv}}"></clsimg>
	</view>

  <view class='clsdet-component'>
    <cls-info exp="{{actv}}"></cls-info>
  </view>

  <view class='clsdet-component'>
    <cls-reward></cls-reward>
  </view>

  <view class='clsdet-component'>
    <view class="clsdet-component" wx:if='{{hide}}'>
      <clsabout ></clsabout>
    </view>
  </view>

  <view class='clsdet-component'>
    <cls-remarks></cls-remarks>
  </view>

  <view class='clsdet-component'>
    <view class='notices'>
      <cls-notice></cls-notice>
    </view>
  </view>

   <view class='clsdet-component'>
    <view class='scroll'>
      <cls-scroll></cls-scroll>
    </view>
  </view>

  <view class='clsdet-component'>
    <view class='facility'>
      <cls-facility></cls-facility>
    </view>
  </view>

</view>

<cover-view class="acti-component btn" bindtap='applyPage' wx:if='{{hide}}'>
      <actibtn></actibtn>
</cover-view>
  
  <view class='apply modal' wx:if="{{show}}" animation='{{animationData}}' catchtouchmove="true">
      <view class='write'>
        <view class='block'>
          <view class='title'  bindtap='hideModal'>宝宝概况</view>
          <view class='option'>
            <view class='sex' bindtap='choseColor'  wx:for="{{array}}" data-id="{{index}}" style="{{index == id?'background-color:#FCE0DE;':'baciground-color:#fff;'}}">
              <image class='ico' src='{{item.img}}'></image>
              <text>{{item.text}}</text>
            </view>
          </view>
          <view class='birth'>
            <view class='time' bindtap='selectTime'>
              <text>生日</text>
              <text>{{year}}年{{month}}月{{day}}日</text>
            </view>
            <view class='data-select' wx:if="{{showTime}}">
              <view class='select' bindtap='hideTime'>完成</view>
              <picker-view indicator-style="height: 50px;" style="width: 100%; height: 180px;text-align:center;" value="{{value}}" bindchange="bindChange">
              <picker-view-column>
                <view wx:for="{{years}}" style="line-height: 50px">{{item}}年</view>
              </picker-view-column>
              <picker-view-column>
                <view wx:for="{{months}}" style="line-height: 50px">{{item}}月</view>
              </picker-view-column>
              <picker-view-column>
                <view wx:for="{{days}}" style="line-height: 50px">{{item}}日</view>
              </picker-view-column>
            </picker-view>
            </view>
          </view>
        </view>
        <view class='block'wx:if="{{showOthers}}">
          <view class='title'  bindtap='hideModal'>联系方式</view>
          <view class='num'>
              <input  type="number" placeholder-style="font-family: PingFangSC-Regular;font-size: 14px;color: #D9D9D9;" placeholder="请输入" focus="{{focus}}" />
          </view>
        </view>
        <view class='submit' bindtap='showSuccess' wx:if="{{showOthers}}">申请体验</view>
      </view>
  </view>
