<!--pages/activity/activity.wxml-->
<view class="acti-container">
  <view class="acti-component">
    <actiimg></actiimg>
  </view>
  <view class="acti-component">
    <actiabout isCourse='false'></actiabout>
  </view>
  <view class="acti-component" bindtap='applyDetail'>
    <actilstc></actilstc>
  </view>
  <!-- <view class="acti-component">
		<actiloc></actiloc>
	</view>
  <view class="acti-component">
		<actitp></actitp>
	</view> -->
  <view class='acti-component'>
    <actilocal></actilocal>
  </view>
  <view class="acti-component" bindtap='applyList'>
    <actibtn></actibtn>
  </view>
  <view class='apply' wx:if="{{show}}" animation='{{animationData}}'>
    <view class='write'>
      <view class='block'>
        <view class='title'>宝宝概况</view>
        <view class='option'>
          <view class='sex'>
            <image class='ico'></image>
            小公主
          </view>
          <view class='sex'>
            <image class='ico'></image>
            <text>小王子</text>
          </view>
        </view>
        <view class='birth'>
          <view class='time'>
            <text>生日</text>
            <text>{{year}}年{{month}}月{{day}}日</text>
          </view>
          <!-- <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
            <picker-view-column>
              <view wx:for="{{years}}" style="line-height: 50px">{{item}}年</view>
            </picker-view-column>
            <picker-view-column>
              <view wx:for="{{months}}" style="line-height: 50px">{{item}}月</view>
            </picker-view-column>
            <picker-view-column>
              <view wx:for="{{days}}" style="line-height: 50px">{{item}}日</view>
            </picker-view-column>
          </picker-view> -->
        </view>
      </view>
      <view class='block'>
        <view class='title'>联系方式</view>
        <view class='num'>
            <input  type="number" placeholder-style="font-family: PingFangSC-Regular;font-size: 14px;color: #D9D9D9;" placeholder="请输入" focus="{{focus}}" />
        </view>
      </view>
      <view class='submit' bindtap='hideModal'>申请体验</view>
    </view>
  </view>

</view>