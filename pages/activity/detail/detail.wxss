/* pages/activity/activity.wxss */
.acti-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.acti-component {
	width: 100%;
}
.content-item {
  border: 1px solid rgb(151,151,151);
}
.apply {
  
}
.write {
  height: auto;
  background: #FFF;

  display: flex;
  flex-direction: column;

  padding-left: 38rpx;
  padding-right: 38rpx;
  /* transform: translateY(-100%); */
  margin-top: -100%;
}
.write .block {
  display: flex;
  flex-direction: column;

  margin-bottom: 30rpx;
  margin-top: 48rpx;
}
.write .block .title {
  font-family: SFProText-Medium;
  font-size: 16px;
  color: #404040;

  margin-bottom: 30rpx;
}
.write .block .option {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.write .block .option .sex {
  width: 324rpx;
  height: 116rpx;
  border: 1px solid #d9d9d9;
  border-radius: 8rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.write .block .option .sex:nth-last-child(2) {
  margin-right: 28rpx;
}
.write .block .option .sex .ico {
  width: 40rpx;
  height: 42rpx;
  background: green;
  border-radius: 50%;

  margin-right: 16rpx;
}
.write .block .birth {
  display: flex;
  flex-direction: column;

  margin-top: 30rpx;
}
.write .block .time {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

  background: #FFFFFF;
  border: 1px solid #D9D9D9;
  border-radius: 4px;

  padding-left: 34rpx;
  padding-right: 34rpx;
  padding-top: 36rpx;
  padding-bottom: 36rpx;
}
.write .block .num input {
  background: #FFFFFF;
  border: 1px solid #D9D9D9;
  border-radius: 4px;
  padding: 36rpx 34rpx;
}
.write .submit {
  margin-top: 16rpx;
  margin-bottom: 40rpx;

  background-image: linear-gradient(-90deg, #8CB6FF 0%, #5F93ED 100%);
  border-radius: 8rpx;
  box-shadow: 0 4px 8px 0 rgba(52,96,201,0.48);

  text-align: center;
  padding-top: 32rpx;
  padding-bottom: 32rpx;
}