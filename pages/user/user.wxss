/* pages/user/user.wxss */
.content-page {
  display: flex;
  flex-direction: column;
}
.content-page .head {
  display: flex;
  flex-direction: column;
  align-items: center;

  margin-top: 54rpx;
}
.content-page .head .head-img {
  width: 144rpx;
  height: 144rpx;
  background: red;
  border-radius: 50%;
  box-shadow: 0 6px 10px 0 rgba(19,34,59,0.10);

  margin-bottom: 32rpx;
}
.content-page .head .head-name {
font-family: SFProText-Bold;
font-size: 16px;
color: #404040;

margin-bottom: 48rpx;
}
.content-page .func {
margin-left: 66rpx;
margin-right: 66rpx;
width: auto;

padding-top: 96rpx;
border-top: 1px solid #E0E0E0;
}
.content-page .func .server {
display: flex;
flex-direction: row;
justify-content: space-between;

  margin-bottom: 96rpx;
}
.content-page .func .server image {
  width: 18px;
  height: 18px;
  background: green;
}
.content-page .func .server text {
  padding-left: 34rpx;
}