<view class='content-page'>
  <!-- <server-list  bindtap='activityDetail'></server-list> -->
    <view class="swiper-tab">
      <view class="bre swiper-tab-list {{tab==0 ? 'on' : ''}}" data-current="0" bindtap="tab_click">待确认</view>
      <view class="swiper-tab-list {{tab==1 ? 'on' : ''}}" data-current="1" bindtap="tab_click">已确认</view>
      <view class="swiper-tab-list {{tab==2 ? 'on' : ''}}" data-current="2" bindtap="tab_click">已完成</view>
    </view>
    <swiper current="{{tab}}" class="swiper-box" duration="300" style="height:500px" bindchange="tab_slide">
      <swiper-item>
        <server-tab></server-tab>
      </swiper-item>
  
      <swiper-item>
        <server-tab></server-tab>
      </swiper-item>

       <swiper-item>
        <server-tab></server-tab>
      </swiper-item>
    </swiper>
</view>