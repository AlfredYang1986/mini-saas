/* pages/class-lst/class-lst.wxss */

.cls-lst {

}

.cls-lst .content-page {
	display: flex;
	flex-wrap: nowrap;
	flex-direction: column;
	justify-content: flex-start;

	padding: 0 40rpx;
}

.cls-lst .content-item {
	display: flex;
	flex-wrap: nowrap;
	flex-direction: column;
	justify-content: flex-start;

	margin-bottom: 80rpx;
}

.cls-lst .content-row {
	display: flex;
	flex-wrap: nowrap;
	flex-direction: row;
	justify-content: flex-start;
}

.cls-lst .content-row-span {
	display: flex;
	flex-wrap: nowrap;
	flex-direction: row;
	justify-content: space-between;
}

.cls-lst .cls-img {
	width: 670rpx;
	height: 412rpx;

	background-size: cover;
	background-repeat: no-repeat;
}

.cls-lst .title {
	font-family: PingFangSC-Medium;
	font-size: 32rpx;
	color: #404040;

	margin-left: 8rpx;
	margin-top: 32rpx;
}

.cls-lst .sub-title {
	font-family: PingFangSC-Regular;
	font-size: 26rpx;
	color: #737373;

	margin-top: 16rpx;
}

.cls-lst .price-container {

}

.cls-lst .price-container .price {
	font-family: SFProText-Medium;
	font-size: 36rpx;
	color: #0D0D0D;
}

.cls-lst .price-container .price-des {
	font-family: PingFangSC-Regular;
	font-size: 22rpx;
	color: #A6A6A6;

	margin-top: 14rpx;
}
