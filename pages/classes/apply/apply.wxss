.content-page {
  display: flex;
  flex-direction: column;

  padding-top: 76rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  margin-bottom: 64rpx;
}
.list .name {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #404040;
}
.list .select text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #D9D9D9;
  margin-right: 16rpx;
}
.list .select image {
  width: 8rpx;
  height: 16rpx;
  /* background: red; */
}
.list .select .child {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #80AEFF;
}
.list .select .add {
  width: 28rpx;
  height: 28rpx;
}
.border-bottom {
  border-bottom: 1px solid rgba(0,0,0,0.05);
  padding-bottom: 56rpx;
  margin-bottom: 56rpx;
}
.btn {
  position: fixed;
  background: #fff;
  width: 90%;
  height: 60rpx;
  bottom: 0;


  z-index: 9999;

  margin-top: 16rpx;
  margin-bottom: 40rpx;
  margin-right: 80rpx;

  background-image: linear-gradient(-90deg,#5F93ED 100%, #8CB6FF 0% );
  border-radius: 8rpx;
  box-shadow: 0 4px 8px 0 rgba(52,96,201,0.48);

  text-align: center;
  padding-top: 32rpx;
  padding-bottom: 32rpx;
}