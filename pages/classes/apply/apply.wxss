.content-page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  padding-top: 76rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}
.list-col {
  padding-bottom: 32rpx;
  margin-bottom: 56rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.list-col .name {
  margin-bottom: 10rpx;
}
.list-col text {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #A6A6A6;
}
.list{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  margin-bottom: 64rpx;
}
.list .name {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #404040;
  min-width: 140rpx;
}
.list .section {
  text-align: right;
  width: 100%;
}
.list .school image {
  width: 12rpx;
  height: 24rpx;
}
.list .school text {
  font-family: PingFangSC-Regular;
  font-size: 28px;
  color: #404040;
  margin-right: 16rpx;
}
.list .section picker {
  width: 100%;
}
.list .select {
  width: 100%;
  text-align: right;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;

}
.list .select text {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #404040;
  margin-right: 16rpx;
}
.list .select image {
  width: 12rpx;
  height: 24rpx;
  /* background: red; */
}
.list .select .child {
  margin: 0;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #80AEFF;
  background: none;
  padding-left: 8rpx;
  padding-right: 0;
  text-align: right;
}
.list .select .child text {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #80AEFF;
}
.list .select .add {
  width: 28rpx;
  height: 28rpx;
}
.list .select input {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #404040;
  text-align: right;
}
.child-info {
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  margin-bottom: 56rpx;
}
.radio-list .child-info-radio {
  width: 100%;
}
.radio-list .child-info-list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 56rpx;
}
.radio-list .child-info-list radio {
  display: none;
}
.radio-list .child-info-list text {
  margin-left: 16rpx;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #404040;
}
.child-info-list .child-delete-area {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.radio-list .child-info-list image {
  margin-left: 40rpx;
  width: 36rpx;
  height: 36rpx;
}
.radio-list .child-info-list checkbox {
  margin-right: 16rpx;
}
.radio-list {
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}

.border-bottom {
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
  padding-bottom: 56rpx;
  margin-bottom: 56rpx;
}
.btn {
  position: fixed;
  background: #fff;
  width: 90%;
  height: 60rpx;
  bottom: 0;


  z-index: 2;

  margin-top: 16rpx;
  margin-bottom: 40rpx;
  margin-right: 80rpx;

  background-image: linear-gradient(-90deg,#5F93ED 100%, #8CB6FF 0% );
  border-radius: 8rpx;
  box-shadow: 0 4px 8px 0 rgba(52,96,201,0.48);

  text-align: center;
  padding-top: 32rpx;
  padding-bottom: 32rpx;
}
/*模态框*/
.modals{
  position:fixed; 
  z-index: 999; 
  top:0; 
  left: 0; 
  right:0; 
  bottom: 0;
}
.modals-cancel{
  position:absolute;
  z-index:1000; 
  top:0; 
  left: 0; 
  right:0; 
  bottom: 0; 
  background-color: rgba(0,0,0,.5);
}
.bottom-dialog-body{
  position:absolute; 
  z-index:1000; 
  bottom:0; 
  left:0; 
  right:0; 
  padding:0; 
  height:510rpx; 
  background-color: #fff;
}
/*动画前初始位置*/
.bottom-pos{
  -webkit-transform:translateY(100%);
  transform:translateY(100%);
}

.child-modal {
  height: 804rpx;
  padding: 48rpx 40rpx;
}
.child-modal .child-title {
  margin-bottom: 72rpx;
  display: flex;
  flex-direction: column;
}
.child-title .title-text {
  margin-bottom: 16rpx;
