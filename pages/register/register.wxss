.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.logo {
  margin-bottom: 450rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo .slogan {
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  color: #732C27;
  letter-spacing: 8rpx;
}
.logo image {
  margin-top: 228rpx;
  margin-bottom: 28rpx;
  width: 750rpx;
  height: 170rpx;
  background: #ddd;
}
.btn {
  padding: 26rpx 170rpx;
  background-image: linear-gradient(-123deg, #F78065 0%, #E4534A 100%);
  box-shadow: 0 12rpx 16rpx 0 rgba(235,57,54,0.17);
  border-radius: 60rpx;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #FFFFFF;
}

