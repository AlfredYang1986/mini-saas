.loc-banner .loc-lst {
	margin-top: 8rpx;
}

.loc-banner .loc-panel {
	margin-top: 32rpx;
}

.loc-banner .loc-panel .location-title {
	font-size: 28rpx;
	color: #404040;
	font-family: PingFangSC-Medium;
}

.loc-banner .loc-panel .location-address {
 	font-family: SFProText-Regular;
	font-size: 28rpx;
	color: #A6A6A6;

	margin-top: 16rpx;
}

.loc-banner .loc-panel .location-icon {
	margin-top: 26rpx;
	margin-right: 10rpx;
	width: 22rpx;
	height: 26rpx;
}

.loc-banner .loc-panel .arraw-container {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: space-around;
}

.loc-banner .loc-panel .arraw-container image {
	width: 16rpx;
	height: 26rpx;
}

.loc-banner .loc-panel .split-line {
