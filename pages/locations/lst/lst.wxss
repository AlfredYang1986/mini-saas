.loc-banner {

}

.loc-banner .content-page {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;

	padding: 0 40rpx;
}

.loc-banner .content-item {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;
}

.loc-banner .content-row {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: flex-start;
}

.loc-banner .content-row-span {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}

.loc-banner .content-row-span .title {
	font-family: PingFangSC-Medium;
	font-size: 40rpx;
	color: #0D0D0D;
}

.loc-banner .content-row-span .more {
	font-family: PingFangSC-Medium;
	font-size: 26rpx;
	color: #A6A6A6;
}

.loc-banner .loc-place-holder {
	margin-top: 32rpx;
}

