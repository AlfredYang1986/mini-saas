/* pages/baby/record/record.wxss */
.content-page {
  display: flex;
  flex-direction: column;

  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 34rpx;
}
.content-page .title {
  padding-bottom: 42rpx;

  font-family: SFProText-Medium;
  font-size: 20px;
  color: #404040;
}
.content-page .block {
  display: flex;
  flex-direction: column;

  padding-bottom: 32rpx;
  padding-top: 26rpx;
  border-bottom: 1px solid #E0E0E0;
}
.content-page .block .line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

  margin-bottom: 32rpx;
}
.content-page .block .line .time .day {
  font-family: SFProText-Medium;
  font-size: 24px;
  color: #404040;

  margin-right: 4rpx;
}
.content-page .block .line .time .month {
  font-family: SFProText-Regular;
  font-size: 11px;
  color: #404040;
}
.content-page .block .line .progress {
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  background:  #F3F7FF;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;

  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #404040; 

  margin-top: 10rpx;
}
.content-page .block .image {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.content-page .block .image image {
  width: 212rpx;
  height: 212rpx;
  background: red;
} 
.content-page .block .intro {
  margin-top: 32rpx;

  font-family: SFProText-Regular;
  font-size: 14px;
  color: #404040;
  letter-spacing: 1px;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.content-page .block .intro .hour {
  align-self: flex-end;

  font-family: SFProText-Regular;
  font-size: 11px;
  color: #A6A6A6;

  margin-top: 16rpx;
}