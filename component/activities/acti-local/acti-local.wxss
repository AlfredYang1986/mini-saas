/* component/location-banner/location-banner.wxss */

.loc-banner {

}

.loc-banner .content-page {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;

	padding: 64rpx 64rpx 40rpx 64rpx;
  margin-bottom: 160rpx;
}

.loc-banner .content-item {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;
}

.loc-banner .content-row {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: flex-start;
  padding-left: 32rpx;
}

.loc-banner .content-row-span {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
  margin-bottom: 48rpx;
}

.loc-banner .content-row-span .title {
	font-size: 32rpx;
  /* padding-left: 20rpx; */
  font-family: SFProText-Medium;
  color: #404040;
}
.loc-banner .content-row-span .select {
  font-family: SFProText-Medium;
  font-size: 13px;
  color: #80AEFF;
  text-align: right;
}

.loc-banner .content-row-span .more {
	font-family: PingFangSC-Medium;
	font-size: 13px;
	color: #A6A6A6;
}

.loc-banner .loc-place-holder {
	margin-top: 32rpx;
}

.loc-banner .loc-lst {
	/* margin-left: 16rpx;
	margin-right: 16rpx; */
}

.loc-banner .loc-panel .loc-detail-container {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;

   border-radius: 4rpx; 
   /* border: 1px solid #A6A6A6; */
}

.loc-banner .loc-panel .loc-card {
	/* border: 1px solid #A6A6A6; */
  background: #f8f8ff;
	border-radius: 4rpx; 

	padding: 10rpx 0;
	margin-bottom: 26rpx;
}

.loc-banner .loc-panel .location-title {
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	color: #404040;

  margin: 10rpx;
}

.loc-banner .loc-panel .location-address {
 	font-family: SFProText-Regular;
	font-size: 28rpx;
	color: #A6A6A6;

  margin: 10rpx;
}

.loc-banner .loc-panel .location-icon {
	margin-top: 10rpx;
	margin-right: 10rpx;
	width: 22rpx;
	height: 26rpx;
}

.loc-banner .loc-panel .arraw-container {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: space-around;
}

.loc-banner .loc-panel .arraw-container image {
	width: 16rpx;
	height: 26rpx;
}
.img-wrap {
    position: relative;
    width: 100%;
    height: 200px;
    opacity: 1;
}
.cover-image {
  background: url('https://bm-mini.oss-cn-beijing.aliyuncs.com/demo/1.png');
  position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 800px;

}
