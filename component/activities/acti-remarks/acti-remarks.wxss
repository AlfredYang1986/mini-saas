/* component/activities/acti-remarks/acti-remarks.wxss */
.explan {
  height: 72rpx;
  background: #F8FBFF;
  border-radius: 4px;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.explan image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  margin-left: 32rpx;
}
.explan text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #737373;
  letter-spacing: 1px;
}
.content {
  display: flex;
  flex-direction: column;
}
.about-margin {
	/* margin-top: 98rpx; */
	margin-left: 40rpx;
	margin-right: 40rpx;
  padding-top: 64rpx;
  padding-bottom: 64rpx;
}
.content .title {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #404040;

  margin-bottom: 16rpx;
}
.content .lists {
  display: flex;
  flex-direction: column;

  margin-bottom: 32rpx;
}
.lists .list {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #737373;
  letter-spacing: 1px;

  margin-bottom: 16rpx;
}