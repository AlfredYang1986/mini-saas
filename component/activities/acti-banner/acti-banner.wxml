<!--component/activities/acti-banner/acti-banner.wxml-->
<view class='content-page'>
  <view class='title' bindtap='showLst'>
    <text>精彩活动</text>
    <image src='https://bm-mini.oss-cn-beijing.aliyuncs.com/demo/icon_enter%402x.png'></image>
  </view>
  <scroll-view class="scroll-x" scroll-x style="width: 100%">
    <view class='content'>
      <view class='list'  wx:for="{{activityInfo}}"   bindtap='showActiDetail'>
        <view class='bg-image' style="background-image: url('{{item.url}}')" >
          <view class='list-detail'>
            <view class='info'>
              <view class='sort'>{{item.sort}}</view>
              <view class='age'>{{item.minAge}} - {{item.maxAge}} 岁</view>
            </view>
            <view class='apply'>
              <view class='name'>{{item.name}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>