/* component/activities/acti-banner/acti-banner.wxss */
.content-page {
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 28rpx;
  display: flex;
  flex-direction: column;
}
.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  margin-bottom: 32rpx;
}
.title text {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #404040;
}
.title image {
  width: 14rpx;
  height: 26rpx;
}
.content {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
	justify-content: flex-start;
  align-items: flex-end;
}
.content .list {
  margin-right: 32rpx;
  background: #000;
  width: 271px;
  height: 153px;
  border-radius: 8rpx;
}
.content .list .list-detail{
  padding: 32rpx;
  height: 121px;
  width: 239px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  box-shadow: 0 9px 13px 0 rgba(173,186,222,0.62);
  border-radius: 8rpx;
}
.list .info {
  display: flex;
  flex-direction: column;
}
.list .info .sort {
  opacity: 0.7;
  font-family: PingFangSC-Medium;
  font-size: 11px;
  color: #FFFFFF;
}
.list .info .name {
  font-family: SFProText-Bold;
  font-size: 16px;
  color: #FFFFFF;
}
.list .info .time {
  margin-top: 16rpx;
}
.list .info .date {
  margin-right: 8rpx;
}
.list .info .week {
  margin-right: 32rpx;
}
.list .info {
  font-family: SFProText-Regular;
  font-size: 13px;
  color: #FFFFFF;
}
.list .apply {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.list .apply .price {
  font-family: SFProText-Regular;
  font-size: 11px;
  color: #FFFFFF;

  display: flex;
  flex-direction: row;
  align-items: center;
}
.list .apply .price text {
  font-family: SFProText-Bold;
  font-size: 16px;
  color: #FFFFFF;

  margin-right: 8rpx;
}
.list .apply .btn {
  background: #80AEFF;
  border-radius: 4px;
  width: 138rpx;
  height: 52rpx;

  font-family: SFProText-Medium;
  font-size: 13px;
  color: #FFFFFF;
  text-align: center;
  line-height: 52rpx;
}