/* component/location-banner/location-banner.wxss */

.loc-banner {

}

.loc-banner .content-page {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;

	padding: 0 20rpx;
}

.loc-banner .content-item {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;
}

.loc-banner .content-row {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: flex-start;
  padding-left: 32rpx;
}

.loc-banner .content-row-span {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}

.loc-banner .content-row-span .title {
	font-family: PingFangSC-Medium;
	font-size: 48rpx;
  color: #404040;
  margin-left: 40rpx;
  margin-top: 6d0rpx;
  margin-bottom: 38rpx;
}

.loc-banner .content-row-span .more {
	font-family: PingFangSC-Medium;
	font-size: 13px;
	color: #A6A6A6;
}

.loc-banner .loc-place-holder {
	margin-top: 32rpx;
}

.loc-banner .loc-lst {
	margin-left: 16rpx;
	margin-right: 16rpx;
}

.loc-banner .loc-panel .loc-detail-container {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;

   border-radius: 4rpx; 
   /* border: 1px solid #A6A6A6; */
}

.loc-banner .loc-panel .loc-card {
	/* border: 1px solid #A6A6A6; */
  background: #f8f8ff;
	border-radius: 4rpx; 

	padding: 10rpx 0;
	margin-bottom: 80rpx;
}

.loc-banner .loc-panel .location-title {
	font-family: PingFangSC-Regular;
	font-size: 32rpx;
	color: #404040;

  margin: 10rpx;
}

.loc-banner .loc-panel .location-address {
 	font-family: SFProText-Regular;
	font-size: 28rpx;
	color: #A6A6A6;

  margin: 10rpx;
}

.loc-banner .loc-panel .location-icon {
	margin-top: 10rpx;
	margin-right: 10rpx;
	width: 22rpx;
	height: 26rpx;
}

.loc-banner .loc-panel .arraw-container {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: space-around;
}

.loc-banner .loc-panel .arraw-container image {
	width: 16rpx;
	height: 26rpx;
}
