.class-banner {

}

.class-banner .content-page {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;

	padding: 0 20rpx;
}

.class-banner .content-item {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;
}

.class-banner .content-row-span {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: center;
	margin-bottom: 20rpx;
  margin-top: -50rpx;
}

.class-banner .content-row-span .title {
  font-family: SFProText-Regular;
  font-size: 34rpx;
  color: #0D0D0D; 

	margin-left: 40rpx;
  margin-bottom: 38rpx;
}

.class-banner .content-row-span .more {
	font-family: SFProText-Medium;
	font-size: 26rpx;
	color: #A6A6A6;
	margin-right: 20rpx;
}

.class-banner .content-row {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
}

.class-banner .cls-container {
	margin-left: 14rpx;
	margin-right: 14rpx;
}

.class-banner .cls-detail {
	margin-left: 16rpx;
	margin-right: 16rpx;
  margin-bottom: 10rpx;
  margin-top: 10rpx;

	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;

  background: #FFFFFF;
  box-shadow: 0 4px 10px 0 rgba(72,88,128,0.10);
  border-radius: 8rpx;
}

.class-banner .cls-detail .cls-img {
	width: 305rpx;
	height: 200rpx;
  border-radius: 8rpx 8rpx 0 0;

	background-size: cover;
	background-repeat: no-repeat;
}

