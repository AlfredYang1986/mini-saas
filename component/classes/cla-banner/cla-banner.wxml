<!--component/classes/cla-banner/cla-banner.wxml-->
<view>{{exps.length}}</view>
<view class='content-page'>
  <block wx:if="{{isList == 'false'}}">
    <view class='title'>
      <text>精选体验课</text>
    </view>
  </block>
  <view class='content'>
    <view class='list' wx:for="{{classInfo}}" bindtap='showClsDetail'>
      <view class='cover' style="background-image: url('{{item.url}}')"></view>
      <view class='class-info'>
        <view class='info'>
          <text class='sort'>{{item.sort}}</text>
          <text class='name'>{{item.name}}</text>
        </view>
        <view class='suit'>
          <text class='age'>{{item.age}}</text>
          <!-- <view class='price'><text>￥{{item.price}}</text>/课时</view> -->
        </view>
      </view>
    </view>
  </view>
  <block wx:if="{{isList == 'false'}}">
    <a class='showClasses' bindtap='showClasses'>更多精选体验课</a>
  </block>
  
</view>