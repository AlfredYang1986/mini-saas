 .matter-list {
  width: 502rpx;
  min-height: 296rpx;
  height: auto;
  background-image: linear-gradient(-180deg, rgba(86,162,221,0.42) 0%, rgba(39,56,162,0.79) 100%);
  border-radius: 8rpx;
  box-shadow: 0 4px 10px 0 rgba(39,53,128,0.45);

  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.matter-list .info {
  display: flex;
  flex-direction: column;
}
 .matter-list .info .name {
  margin-left: 32rpx;
  margin-top: 72rpx;

font-family: SFProText-Semibold;
font-size: 16px;
color: #FFFFFF;
}
.matter-list .info .address {
  margin-left: 32rpx;
  margin-top: 16rpx;

font-family: PingFangSC-Regular;
font-size: 13px;
color: #FFFFFF;
}
.matter-list .num {
  margin-right: 32rpx;
  margin-bottom: 32rpx;

font-family: PingFangSC-Regular;
font-size: 11px;
color: #FFFFFF;
}
.matter-list .end {
  align-self: flex-end;
  justify-content: flex-end;
}
.time-list .day {
font-family: SFProText-Medium;
font-size: 48rpx;
color: #404040;
margin-right: 4rpx;
}
.matter-list .bg-img {
  height: 202rpx;
  width: 100%;
  border-radius: 8rpx;
  background: red;

  display: flex;
  justify-content: space-between;
}
.matter-list .bg-img .item:nth-child(2) {
  align-self: flex-end;
}
.matter-list .bg-img .start-time {
background: #80AEFF;
border-radius: 8rpx 0 8rpx 0;
width: auto;
height: 56rpx;
}
.matter-list .bg-img .start-time text {
font-family: SFProText-Regular;
font-size: 14px;
color: #FFFFFF;
padding: 8rpx 16rpx;
}
.matter-list .bg-img .progress {
  padding-right: 32rpx;

  transform: translateY(-48rpx);
}
 .matter-list .bg-img .progress text {
font-family: PingFangSC-Regular;
font-size: 14px;
color: #FFFFFF;
}
 .matter-list progress {
  margin-left: 6%;
  width: 88%;

  transform: translateY(-48rpx);
} 
.bg-white {
  background: #fff !important;
}
.bgnone {
  background: rgba(0, 0, 0, 0);
}
.bg-white .class-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.bg-white .class-info .cla-name {
font-family: PingFangSC-Medium;
font-size: 32rpx;
color: #404040;

/* margin-bottom: 32rpx; */
margin-left: 32rpx;
margin-top: 22rpx;
}
.bg-white .class-info .cla-num {
font-family: SFProText-Regular;
font-size: 28rpx;
color: #404040;

margin-bottom: 32rpx;
margin-right: 32rpx;
margin-top: 22rpx;
}
 .bg-white .cla-time {
font-family: SFProText-Regular;
font-size: 28rpx;
color: #A6A6A6;

margin-left: 32rpx;
margin-top: 16rpx;
margin-bottom: 36rpx;
}