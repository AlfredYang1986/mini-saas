/* pages/baby/baby.wxss */

.list {
  display: flex;
  justify-content: space-between;

  margin-top: 52rpx;
  margin-bottom: 28rpx;

  transform: translateY(-350rpx);
  /* margin-bottom: -350rpx; */
}
.list .matter-list {
  width: 502rpx;
  min-height: 296rpx;
  height: auto;
  background-image: linear-gradient(-180deg, rgba(86,162,221,0.42) 0%, rgba(39,56,162,0.79) 100%);
  border-radius: 8rpx;
  box-shadow: 0 4px 10px 0 rgba(39,53,128,0.45);

  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.list .matter-list .info {
  display: flex;
  flex-direction: column;
}
.list .matter-list .info .name {
  margin-left: 32rpx;
  margin-top: 72rpx;

font-family: SFProText-Semibold;
font-size: 16px;
color: #FFFFFF;
}
.list .matter-list .info .address {
  margin-left: 32rpx;
  margin-top: 16rpx;

font-family: PingFangSC-Regular;
font-size: 13px;
color: #FFFFFF;
}
.list .matter-list .num {
  margin-right: 32rpx;
  margin-bottom: 32rpx;

font-family: PingFangSC-Regular;
font-size: 11px;
color: #FFFFFF;
}
.list .matter-list .item:nth-child(2) {
  align-self: flex-end;
}
.content-page .list .time-list .day {
font-family: SFProText-Medium;
font-size: 48rpx;
color: #404040;
margin-right: 4rpx;
}
 .list .matter-list .bg-img {
  height: 202rpx;
  width: 100%;
  border-radius: 8rpx;
  background: red;
  background-size: cover;
  background-position: center;

 
}
.list .matter-list .bg-img .mask {
  width: 100%;
  height: 202rpx;
  background-image: linear-gradient(-180deg, rgba(64,81,255,0.00) 0%, rgba(64,81,255,0.47) 100%);
  border-radius: 4px 4px 0 0;

   display: flex;
  justify-content: space-between;
}
 .list .matter-list .bg-img .end {
  align-self: flex-end;
}
 .list .matter-list .bg-img .start-time {
background: #80AEFF;
border-radius: 8rpx 0 8rpx 0;
width: auto;
height: 56rpx;
}
 .list .matter-list .bg-img .start-time text {
font-family: SFProText-Regular;
font-size: 14px;
color: #FFFFFF;
padding: 8rpx 16rpx;
}
.list .matter-list .bg-img .progress {
  padding-right: 32rpx;

  transform: translateY(-48rpx);
}
.list .matter-list .bg-img .progress text {
font-family: PingFangSC-Regular;
font-size: 14px;
color: #FFFFFF;
}
  .list .matter-list progress {
  margin-left: 6%;
  width: 88%;

  transform: translateY(-48rpx);
} 
 .list .bg-white {
  background: #fff !important;
}
.list .bg-white .class-info {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
 .list .bg-white .class-info .cla-name {
font-family: PingFangSC-Medium;
font-size: 32rpx;
color: #404040;

/* margin-bottom: 32rpx; */
margin-left: 32rpx;
margin-top: 22rpx;
}
 .list .bg-white .class-info .cla-num {
font-family: SFProText-Regular;
font-size: 28rpx;
color: #404040;

margin-bottom: 32rpx;
margin-right: 32rpx;
margin-top: 22rpx;
}
 .list .bg-white .cla-time {
font-family: SFProText-Regular;
font-size: 28rpx;
color: #A6A6A6;

margin-left: 32rpx;
margin-top: 16rpx;
margin-bottom: 36rpx;
}
.list .time-list .month {
font-family: PingFangSC-Regular;
font-size: 22rpx;
color:  #A6A6A6;
}
 .list .color-white text {
  color: #ffffff !important;
}
 