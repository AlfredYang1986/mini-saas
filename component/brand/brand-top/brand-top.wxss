/* component/brand/brand-top/brand-top.wxss */
.content-page {
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding-top: 56rpx;
  padding-bottom: 48rpx;
  margin-bottom: 20rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  border-bottom: 1rpx solid  #f2f2f2;
}
.info {
  display: flex;
  flex-direction: column;
}
.info .title {
  font-family: SFProText-Medium;
  font-size: 40rpx;
  color: #80AEFF;

  margin-bottom: 16rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
}
.info .title text{
  margin-right: 16rpx;
  font-weight: 700;
}
.info .title .img {
  width: 44rpx;
  height: 44rpx;
}
.info .intro {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #404040;
  margin-left: -16rpx;
  margin-bottom: 16rpx;
  }
.lists {
  display: flex;
  flex-direction: row;
}
.info .list {
  margin-left: -10rpx;
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  color: #A6A6A6;

}
.info .lists .separate {
  margin-left: 16rpx;
  margin-right: 30rpx;
  color: #f2f2f2;
  font-weight: 200;
}
.logo-area {
  margin-left: 52rpx;
  width: 160rpx;
  height: 160rpx;
}
.logo {
  width: 160rpx;
  height: 160rpx;
  box-shadow: 0 8rpx 20rpx 0 rgba(173,186,222,0.37);
  border-radius: 8rpx;  
}
.list view {
  width:170rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}