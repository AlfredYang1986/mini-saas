/* component/brand/brand-detail/brand-detail.wxss */
.content-page {
  display: flex;
  flex-direction: column;

  padding-top: 48rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 80rpx;
}
.time {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.time .content {
  font-family: SFProText-Regular;
  font-size: 14px;
  color: #737373;
  margin-bottom: 32rpx;
}
.title {
  font-family: SFProText-Medium;
  font-size: 16px;
  color: #404040;

  margin-bottom: 32rpx;
  margin-right: 32rpx;
}
.story {
  display: flex;
  flex-direction: column;
}
.story .content {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #737373;
  letter-spacing: 1.08px;  

  padding-bottom: 48rpx;
  margin-bottom: 48rpx;
  border-bottom: 1px solid #E5E5E5;
}
.team {
  display: flex;
  flex-direction: column;
}
.team .content {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #737373;
  letter-spacing: 1.08px;

  padding-bottom: 48rpx;
  margin-bottom: 48rpx;
  border-bottom: 1px solid #E5E5E5;
}
.achievement {
  display: flex;
  flex-direction: column;
}
.achievement .content {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;

  padding-bottom: 48rpx;
  margin-bottom: 48rpx;
  border-bottom: 1px solid #E5E5E5;
}
.achievement .content .list {
  display: flex;
  flex-direction: column;
  align-items: center;

  margin-right: 100rpx;
  margin-top: 44rpx;
}
.achievement .content .list image {
  width: 158rpx;
  height: 134rpx;
  background: red;

  margin-bottom: 60rpx;
}
.achievement .content .list .time {
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #A6A6A6;
  text-align: center;
}
.achievement .content .list .name {
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #A6A6A6;
  text-align: center;
}
.attest {
  display: flex;
  flex-direction: column;

  margin-top: 48rpx;
}
.attest .content {
  display: flex;
  flex-direction: row;
}
.attest .content .list {
  display: flex;
  flex-direction: column;

  margin-right: 54rpx;
}
.attest .content .list image {
  background: #FFFFFF;
  border: 3px solid #FCE7AC;
  width: 192rpx;
  height: 120rpx;

  margin-bottom: 12rpx;
}
.attest .content .list .name {
  width: 192rpx;
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #916868;
  text-align: center;
}