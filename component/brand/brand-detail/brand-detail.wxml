<!--component/brand/brand-detail/brand-detail.wxml-->
<view class='content-page'>
  <view class='head'>
    <image class='logo' src='{{logo}}'></image>
    <text class='headline'>{{title}}</text>
    <view class='des'>「 {{subtitle}} 」</view>
    <view class='lists'>
      <view class='list' wx:for="{{tags}}" wx:for-index="idx">
        {{item}}
        <block wx:if="{{idx < 2}}">
          <text class='separate'> | </text> 
        </block>  
      </view>
    </view>
  </view>
  <view class='time'>
    <text class='title'>成立时间</text>
    <text class='content'>{{time}}</text>
  </view>
  <view class='story'>
    <text class='title'>初心故事</text>
    <text class='content'>{{story}}</text>
  </view>
  <view class='team'>
    <text class='title'>师资阵容</text>
    <text class='content'>{{team}}</text>
  </view>
  <view class='achievement'>
    <text class='title'>教学成就</text>
    <scroll-view class="" scroll-x style="width: 100%">
    <view class='content'>
      <view class='list' wx:for="{{teach}}">
        <image src="{{item.src}}"></image>
        <text class='name'>{{item.time}}{{item.name}}</text>
      </view>
    </view>
    </scroll-view>
  </view>
  <view class='attest'>
    <text class='title'>资质认证</text>
    <scroll-view class="" scroll-x style="width: 100%">
    <view class='content'>
      <view class='list' wx:for="{{attest}}">
        <image src='{{item.img}}'></image>
        <text class='name'>{{item.name}}</text>
      </view>
    </view>
    </scroll-view>
  </view>
</view> 